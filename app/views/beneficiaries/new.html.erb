<div class="form-horizontal">
  <%= form_with model: @beneficiary do |form| %>
  <!-- <p class="notice"><%= notice %></p> -->
  <div class="form-group">
    <%= form.label :account_no, "Account Number", class: "col-md-8 control-label" %>
    <div class="col-md-4">
      <%= form.text_field :account_no, class: "form-control" %><br />
    </div>
  </div>
 
 <div class="form-group">
   <%= form.label :name, "Name", class: "col-md-8 control-label" %>
   <div class="col-md-4">
     <%= form.text_field :name, class: "form-control" %><br />
    </div>
  </div>

  <%= form.submit "Add", class: "btn btn-success" %>
</div>
<% end %>