<div class="form-horizontal">
  <%= form_with model: @transaction do |form| %>
    <div class="form-group">
      <%= form.label :to_account_no, "To Account Number-",class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= form.text_field :to_account_no, class: "form-control" %><br />
      </div>
    </div>
    
    <div class="form-group">
      <%= form.label :amount, "Amount to transfer", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= form.text_field :amount, class: "form-control" %><br />
      </div>
    </div>
    
    <div class="form-group">
      <%= form.text_field :otp , disabled: true,class: "col-md- control-label" %>
      <%= link_to "Generate OTP", generate_otp_transaction_path(current_user.account), remote: true, class: "btn btn-info" %><br />
    </div>
    
    <%= form.submit "Verify", disabled: true, class: "btn btn-success", id: "verify_otp" %>
<% end %>